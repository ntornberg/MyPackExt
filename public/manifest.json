{
  "manifest_version": 3,
  "name": "MyPack Course Picker",
  "version": "1.0",
  "description": "Improved course selection UI with integrated tools",
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.acs.ncsu.edu/*","https://webappprd.acs.ncsu.edu/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://portalsp.acs.ncsu.edu/*"],
      "js": ["src/content.tsx"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["realFetchHook.js"],
      "matches": ["<all_urls>"]
    }
    ]
}
