{
  "manifest_version": 3,
  "name": "MyPack Course Picker",
  "version": "1.0",
  "description": "Improved course selection UI with integrated tools",
  "permissions": ["storage", "scripting", "tabs","cookies"],
  "host_permissions": [
    "https://*.acs.ncsu.edu/*"
  ],
  "action": {
    "default_popup": "./public/popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "./src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://portalsp.acs.ncsu.edu/*"],
      "js": ["./src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
